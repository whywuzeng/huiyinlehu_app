<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dip" >

            <ImageView
                android:id="@+id/hk_list_image"
                android:layout_width="125dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/hk_list_image_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#803493e3"
                android:gravity="center"
                android:paddingBottom="4dip"
                android:paddingTop="4dip"
                android:singleLine="true"
                android:text="免费清理垃圾"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/hk_list_content"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="4dip"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="#ff484848"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip" >

                <TextView
                    android:id="@+id/btn_yuyue"
                    android:layout_width="60dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/red_cornor_bg"
                    android:gravity="center"
                    android:text="马上预约"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/btn_detail"
                    android:layout_width="60dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:layout_toLeftOf="@+id/btn_yuyue"
                    android:background="@drawable/red_cornor_bg"
                    android:gravity="center"
                    android:text="详细介绍"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ffe7e7e7"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>