<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 收货人信息 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff6f6f6"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:gravity="left|center"
                    android:text="收货人信息："
                    android:textColor="#ff484848" />

                <TextView
                    android:id="@+id/write_receiver_ed"
                    android:layout_width="50dp"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/red_cornor_bg"
                    android:gravity="center"
                    android:text="编辑"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#ffb6b6b6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text="收货人："
                        android:textColor="#ff484848" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text="手机号码："
                        android:textColor="#ff484848" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text="收货地址："
                        android:textColor="#ff484848" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/write_receiver_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="left|center"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/write_phone_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="left|center"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/write_addr_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="left|center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginBottom="15dip"
            android:background="#ffb6b6b6" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ffb6b6b6" />

        <!-- 支付和配送方式 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff6f6f6"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="支付和配送方式："
                    android:textColor="#ff484848" />

                <TextView
                    android:id="@+id/write_pay_ed"
                    android:layout_width="50dp"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/red_cornor_bg"
                    android:gravity="center"
                    android:text="编辑"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#ffb6b6b6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text="支付方式："
                        android:textColor="#ff484848" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text="配送方式："
                        android:textColor="#ff484848" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text="送货时间："
                        android:textColor="#ff484848" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/write_pay_way"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="left|center"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/write_send_way"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="left|center"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/write_send_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="left|center"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginBottom="15dip"
            android:background="#ffb6b6b6" />

        <!-- 发票信息 -->

        <LinearLayout
            android:id="@+id/layout_invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:background="#fff6f6f6"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ffb6b6b6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="发票信息"
                    android:textColor="#ff484848" />

                <TextView
                    android:id="@+id/write_invoice_ed"
                    android:layout_width="50dp"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/red_cornor_bg"
                    android:gravity="center"
                    android:text="编辑"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#ffb6b6b6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text="发票类型："
                        android:textColor="#ff484848" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text="发票抬头："
                        android:textColor="#ff484848" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/write_invoice_type_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="left|center"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/write_invoice_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="left|center"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ffb6b6b6" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ffb6b6b6" />

        <!-- 积分抵扣 -->

        <LinearLayout
            android:id="@+id/shop_dedution_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff6f6f6"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="积分抵扣"
                    android:textColor="#ff484848" />

                <CheckBox
                    android:id="@+id/integral_deducate_checkBox"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/switch_select_background"
                    android:button="@null"
                    android:checked="true" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/integral_deducate_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="#ffb6b6b6" />

                <TextView
                    android:id="@+id/integral_deducate_1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text="@string/integral_deducate_1"
                    android:textColor="#ff484848" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/id_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:text="我使用"
                        android:textColor="#ff484848" />

                    <EditText
                        android:id="@+id/shop_jifen_ed"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/id_1"
                        android:background="@drawable/red_cornor_bg_line"
                        android:gravity="center"
                        android:inputType="number"
                        android:minWidth="50dp"
                        android:numeric="integer"
                        android:padding="3dp"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/index_red" />

                    <TextView
                        android:id="@+id/integral_deducate_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/shop_jifen_ed"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:text="@string/jifen_deducate"
                        android:textColor="#ff484848" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text="友情提醒：订单交易成功后，积分不可返还！"
                    android:textColor="#ff484848" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ffb6b6b6" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dip"
                android:background="#ffe7e7e7" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ffb6b6b6" />
        </LinearLayout>

        <!-- 虎劵抵扣 -->

        <LinearLayout
            android:id="@+id/shop_lhj_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff6f6f6"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="红包(券)抵扣"
                    android:textColor="#ff484848" />

                <TextView
                    android:id="@+id/write_hujuan_ed"
                    android:layout_width="50dp"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/red_cornor_bg"
                    android:gravity="center"
                    android:text="编辑"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#ffb6b6b6" />

            <TextView
                android:id="@+id/write_hujuan_info"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="@string/order_discount_1"
                android:textColor="#ff484848" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left|top"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="@string/order_remark"
                android:textColor="#ff484848" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ffb6b6b6" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dip"
                android:background="#ffe7e7e7" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ffb6b6b6" />
        </LinearLayout>

        <!-- 查看商品清单 -->

        <TextView
            android:id="@+id/write_good_detail"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff6f6f6"
            android:drawableRight="@drawable/com_black_arraw"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="查看商品清单 "
            android:textColor="#ff484848" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginBottom="15dip"
            android:background="#ffb6b6b6" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ffb6b6b6" />

        <!-- 备注信息 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff6f6f6"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="备注"
                android:textColor="@color/font_black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ffb6b6b6" />

            <EditText
                android:id="@+id/order_remark_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:gravity="left|top"
                android:hint="请输入相应的备注信息"
                android:inputType="textMultiLine"
                android:lines="5"
                android:textSize="12sp" >
            </EditText>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginBottom="15dip"
            android:background="#ffb6b6b6" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ffb6b6b6" />

        <!-- 结算信息 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff6f6f6"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="结算信息"
                    android:textColor="#ff484848" />

                <TextView
                    android:id="@+id/man_mian_freight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text=""
                    android:textColor="@color/blue_color" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#ffb6b6b6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text="商品金额："
                        android:textColor="#ff484848" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text="运费："
                        android:textColor="#ff484848" />

                    <TextView
                        android:id="@+id/jf_title_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text="积分："
                        android:textColor="#ff484848" />

                    <TextView
                        android:id="@+id/hj_title_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text="红包(券)："
                        android:textColor="#ff484848" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text="折扣："
                        android:textColor="#ff484848" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text="+" />

                    <TextView
                        android:id="@+id/jf_minus_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text="-" />

                    <TextView
                        android:id="@+id/hj_minus_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text="-" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/good_total_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/logistic_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text="" />

                    <TextView
                        android:id="@+id/integral_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true"
                        android:text="¥0.00" />

                    <TextView
                        android:id="@+id/hujuan_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/discount_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="right|center"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ffb6b6b6"
                android:visibility="gone" />

            <TextView
