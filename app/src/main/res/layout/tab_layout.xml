<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_guide_layout"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:baselineAligned="true"
    android:orientation="horizontal" >

    <!-- 首页 -->

    <LinearLayout
        android:id="@+id/first_page_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/first_page_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip"
            android:src="@drawable/main_heart_word_selector" />

        <TextView
            android:id="@+id/first_page_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dip"
            android:gravity="center_horizontal"
            android:text="@string/first_page"
            android:textColor="@drawable/main_guide_text_color_selector"
            android:textSize="@dimen/common_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/first_page_item_flag"
            android:layout_width="28dip"
            android:layout_height="4.5dip"
            android:background="@drawable/tab_flag_selector"
            android:visibility="gone" />
    </LinearLayout>

    <!-- 分类 -->

    <LinearLayout
        android:id="@+id/classic_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/classic_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip"
            android:src="@drawable/main_recored_selector" />

        <TextView
            android:id="@+id/classic_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dip"
            android:gravity="center_horizontal"
            android:text="@string/classification"
            android:textColor="@drawable/main_guide_text_color_selector"
            android:textSize="@dimen/common_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/classic_item_flag"
            android:layout_width="28dip"
            android:layout_height="4.5dip"
            android:background="@drawable/tab_flag_selector"
            android:visibility="gone" />
    </LinearLayout>
    <!-- 购物车 -->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/shopping_car_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/shopping_car_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dip"
                android:src="@drawable/main_paradise_selector" />

            <TextView
                android:id="@+id/shopping_car_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:gravity="center_horizontal"
                android:text="@string/shopping_car"
                android:textColor="@drawable/main_guide_text_color_selector"
                android:textSize="@dimen/common_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/shopping_car_item_flag"
                android:layout_width="28dip"
                android:layout_height="4.5dip"
                android:background="@drawable/tab_flag_selector"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
    <!-- 管家 -->

    <LinearLayout
        android:id="@+id/house_keeper_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/house_keeper_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip"
            android:src="@drawable/main_discover_selector" />

        <TextView
            android:id="@+id/house_keeper_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dip"
            android:gravity="center_horizontal"
            android:text="@string/housekeeper"
            android:textColor="@drawable/main_guide_text_color_selector"
            android:textSize="@dimen/common_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/house_keeper_item_flag"
            android:layout_width="28dip"
            android:layout_height="4.5dip"
            android:background="@drawable/tab_flag_selector"
            android:visibility="gone" />
    </LinearLayout>
    <!-- 我的乐虎 -->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/my_lehu_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/my_lehu_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dip"
                android:src="@drawable/main_setting_selector" />

            <TextView
                android:id="@+id/my_lehu_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:gravity="center_horizontal"
                android:text="@string/my_lehu"
                android:textColor="@drawable/main_guide_text_color_selector"
                android:textSize="@dimen/common_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/my_lehu_item_flag"
                android:layout_width="28dip"
                android:layout_height="4.5dip"
                android:background="@drawable/tab_flag_selector"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>