<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/near_shop_lv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="汇银家电（控股）有限公司"
            android:textColor="#484848"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/near_shop_lv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/near_shop_lv_name"
            android:layout_marginTop="3dp"
            android:lines="1"
            android:text="联系电话： 400——188——5022"
            android:textColor="#9e9e9e"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/near_shop_lv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/near_shop_lv_phone"
            android:layout_marginTop="3dp"
            android:lines="1"
            android:text="江苏扬州文昌中路277号汇银国际商务大厦"
            android:textColor="#9e9e9e"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/near_shop_lv_juli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_weizhi_1"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:text="0.45km"
            android:textColor="#9e9e9e"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>