<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/class_list_level3_forviewpager_load"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/class_list_level3_forviewpager_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/img_corner_bg"
        android:gravity="center"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/class_list_level3_forviewpager_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textColor="#ff484848"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/class_list_level3_forviewpager_price"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:text="ï¿¥3699"
        android:textColor="#fffe0201"
        android:textSize="14sp" />

</LinearLayout>