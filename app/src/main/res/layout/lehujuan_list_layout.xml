<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/common_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lhj_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全部"
            android:textColor="@color/index_red"
            android:textSize="@dimen/common_big_text_size" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/lhj_unuse_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="未使用"
            android:textSize="@dimen/common_big_text_size" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/lhj_use_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已使用"
            android:textSize="@dimen/common_big_text_size" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/lhj_past_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已过期"
            android:textSize="@dimen/common_big_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.huiyin.wight.XListView
            android:id="@+id/xlistview_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:cacheColorHint="#0000"
            android:divider="#0000"
            android:dividerHeight="10dp"
            android:fadeScrollbars="true"
            android:fadingEdge="none"
            android:listSelector="@drawable/list_item_drawable_bg"
            android:scrollbars="vertical" />

        <com.huiyin.wight.XListView
            android:id="@+id/xlistview_unuse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:cacheColorHint="#0000"
            android:divider="#0000"
            android:dividerHeight="10dp"
            android:fadeScrollbars="true"
            android:fadingEdge="none"
            android:listSelector="@drawable/list_item_drawable_bg"
            android:scrollbars="vertical"
            android:visibility="gone" />

        <com.huiyin.wight.XListView
            android:id="@+id/xlistview_use"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:cacheColorHint="#0000"
            android:divider="#0000"
            android:dividerHeight="10dp"
            android:fadeScrollbars="true"
            android:fadingEdge="none"
            android:listSelector="@drawable/list_item_drawable_bg"
            android:scrollbars="vertical"
            android:visibility="gone" />

        <com.huiyin.wight.XListView
            android:id="@+id/xlistview_past"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:cacheColorHint="#0000"
            android:divider="#0000"
            android:dividerHeight="10dp"
            android:fadeScrollbars="true"
            android:fadingEdge="none"
            android:listSelector="@drawable/list_item_drawable_bg"
            android:scrollbars="vertical"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>