<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/common_title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp" >

        <ImageView
            android:id="@+id/id_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_yysh" />

        <TextView
            android:id="@+id/yuyue_statu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/id_1"
            android:text="预约审核中"
            android:textColor="@color/blue_color" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/grey_cornor_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:text="@string/yuyue_message_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:text="@string/kefurexian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4008-188-2108"
                android:textColor="@color/blue_color" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/cancel_btn_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/ok_btn_bg"
        android:gravity="center"
        android:text="取消预约"
        android:textColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/grey_cornor_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="right|center"
                    android:text="预约类型：" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="right|center"
                    android:text="预约时间：" />

                <TextView
                    android:id="@+id/yuyue_parts_tv"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="right|center"
                    android:text="所需配件：" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="right|center"
                    android:text="联系人：" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="right|center"
                    android:text="手机号码：" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="right|center"
                    android:text="联系地址：" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="right|center"
                    android:text="备注信息：" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="right|center"
                    android:text="管理员审核：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/yy_type"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center" />

                <TextView
                    android:id="@+id/yy_time"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center" />

                <TextView
                    android:id="@+id/yy_part"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center" />

                <TextView
                    android:id="@+id/yy_username"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center" />

                <TextView
                    android:id="@+id/yy_phone"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center" />

                <TextView
                    android:id="@+id/yy_addr"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center" />

                <TextView
                    android:id="@+id/yy_remark"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center" />

                <TextView
                    android:id="@+id/yy_audit_remark"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>