<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/zhuan_qu_iv_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="12dip"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="6dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/zhuan_qu_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Haier/海尔 KFR-35GW/05KBP22( DS )大1.5匹挂式冷暖空调"
                android:textColor="#ff484848"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/zhuan_qu_tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:gravity="left"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="￥3599.00"
                android:textColor="@color/red_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/zhuan_qu_tv_del_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:layout_marginTop="2dip"
                android:gravity="left"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="￥4599.00"
                android:textColor="@color/grey_text"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>