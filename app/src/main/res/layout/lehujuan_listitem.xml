<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/lehujuan_image_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/icon_quan" />

        <LinearLayout
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lehujuan_title_id"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/lehujuan_time_limit_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/gray"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lehujuan_price_id"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:textColor="@color/red_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/lehujuan_condition_id"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="top"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="2dp"
        android:background="@color/gray" />

</LinearLayout>