<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/common_title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="发票类型：" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/normal_inv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/radio_btn_checked" />

                    <TextView
                        android:id="@+id/normal_inv_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center"
                        android:text="普通发票" />

                    <ImageView
                        android:id="@+id/value_added_inv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/radio_btn_normal" />

                    <TextView
                        android:id="@+id/added_inv_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center"
                        android:text="增值税发票" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/normal_inv_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="发票抬头：" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/inv_title_personal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/radio_btn_checked" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="left|center"
                            android:text="个人" />

                        <ImageView
                            android:id="@+id/inv_title_company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/radio_btn_normal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="left|center"
                            android:text="单位" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:gravity="right" />

                    <EditText
                        android:id="@+id/inv_title"
                        android:layout_width="1dp"
                        android:layout_height="32dp"
                        android:layout_margin="7dp"
                        android:layout_weight="2"
                        android:background="@drawable/grey_cornor_bg"
                        android:gravity="left|center"
                        android:paddingLeft="5dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/added_inv_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="*单位名称：" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="*纳税人识别号：" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="*注册地址：" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="*固定电话：" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="*开户银行：" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="*银行账号：" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/inv_company"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_margin="7dp"
                            android:background="@drawable/grey_cornor_bg"
                            android:gravity="left|center"
                            android:paddingLeft="5dp" />

                        <EditText
                            android:id="@+id/inv_identify"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_margin="7dp"
                            android:background="@drawable/grey_cornor_bg"
                            android:gravity="left|center"
                            android:paddingLeft="5dp" />

                        <EditText
                            android:id="@+id/inv_regist_addr"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_margin="7dp"
                            android:background="@drawable/grey_cornor_bg"
                            android:gravity="left|center"
                            android:paddingLeft="5dp" />

                        <EditText
                            android:id="@+id/inv_phone"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_margin="7dp"
                            android:background="@drawable/grey_cornor_bg"
                            android:gravity="left|center"
                            android:inputType="phone"
                            android:paddingLeft="5dp" />

                        <EditText
                            android:id="@+id/inv_bank"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_margin="7dp"
                            android:background="@drawable/grey_cornor_bg"
                            android:gravity="left|center"
                            android:paddingLeft="5dp" />

                        <EditText
                            android:id="@+id/inv_account"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_margin="7dp"
                            android:background="@drawable/grey_cornor_bg"
                            android:gravity="left|center"
                            android:inputType="number"
                            android:paddingLeft="5dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/invoice_info_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="发票内容：" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/inv_detail"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/radio_btn_selector"
                        android:button="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center"
                        android:text="明细" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/added_inv_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:padding="10dp"
                    android:text="收票人地址"
                    android:textSize="@dimen/common_lage_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="*收票人姓名：" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="*收票人手机：" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="*收票人地址：" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/inv_receiver"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_margin="7dp"
                            android:background="@drawable/grey_cornor_bg"
                            android:gravity="left|center"
                            android:paddingLeft="5dp" />

                        <EditText
                            android:id="@+id/inv_receiver_phone"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_margin="7dp"
                            android:background="@drawable/grey_cornor_bg"
                            android:gravity="left|center"
                            android:paddingLeft="5dp" />

                        <EditText
                            android:id="@+id/inv_receiver_addr"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_margin="7dp"
                            android:background="@drawable/grey_cornor_bg"
                            android:gravity="left|center"
                            android:paddingLeft="5dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="left|center"
                            android:text="@string/invoice_info_2" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/inv_save_info"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="@drawable/red_cornor_bg"
                android:gravity="center"
                android:text="保存发票信息"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>