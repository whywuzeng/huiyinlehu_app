<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/popup_whiteviewpager_header_layout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="分享"
        android:textColor="#666666"
        android:textSize="16sp" >
    </TextView>

    <View
        android:id="@+id/popup_whiteviewpager_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/popup_whiteviewpager_header_layout"
        android:background="#f1f1f1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/popup_qrcode_scan"
        android:layout_below="@+id/popup_whiteviewpager_line"
        android:gravity="center" >

        <ImageView
            android:id="@+id/popup_qrcode_image"
            android:layout_width="200dp"
            android:layout_height="200dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/popup_qrcode_scan"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/popup_qrcode_cancel_bt"
        android:layout_marginBottom="10dp"
        android:gravity="center|top"
        android:orientation="horizontal"
        android:text="扫一扫分享"
        android:textColor="#a7a7a7"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/popup_qrcode_cancel_bt"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/yt_list_item_unselected_color_border"
        android:gravity="center"
        android:text="取        消"
        android:textColor="#69b0fe"
        android:textSize="16sp" />

</RelativeLayout>