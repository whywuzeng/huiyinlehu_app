<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/common_title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginRight="5dp"
                        android:gravity="right|center"
                        android:text="反馈类型：" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="right|center"
                        android:text="反馈内容：" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="right|center"
                        android:text="联系人：" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginRight="5dp"
                        android:gravity="right|center"
                        android:text="手机号码：" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="right|center"
                        android:text="邮箱地址：" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/grey_cornor_bg"
                        android:orientation="horizontal" >

                        <Spinner
                            android:id="@+id/spinner_type"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:background="@null" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray" />

                        <ImageView
                            android:id="@+id/spinner_jiantou"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:background="@drawable/spinner_down"
                            android:scaleType="fitCenter" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp" >

                        <EditText
                            android:id="@+id/content_msg_ed"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/grey_cornor_bg"
                            android:gravity="left|top"
                            android:maxLength="300"
                            android:paddingLeft="5dp"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/msg_text_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="3dp"
                            android:layout_marginRight="6dp"
                            android:text="0/300字"
                            android:textColor="@color/gray" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/contact_msg_ed"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/grey_cornor_bg"
                        android:gravity="left|center"
                        android:hint="请输入您的姓名"
                        android:paddingLeft="5dp"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/phone_msg_ed"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/grey_cornor_bg"
                        android:gravity="left|center"
                        android:hint="请输入您的手机号码"
                        android:numeric="integer"
                        android:paddingLeft="5dp"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/mail_msg_ed"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/grey_cornor_bg"
                        android:gravity="left|center"
                        android:hint="请输入您的邮箱地址"
                        android:paddingLeft="5dp"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/online_msg_commit_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/ok_btn_bg"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>