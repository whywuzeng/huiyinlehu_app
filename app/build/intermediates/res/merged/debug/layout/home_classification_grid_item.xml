<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chaoliujingxuan_shebie_rl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <ImageView
        android:id="@+id/home_classification_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_home_classification_height"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/line_buttom"
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:layout_below="@+id/home_classification_iv"
        android:background="#ffe8e8e8" />

    <View
        android:id="@+id/line_right"
        android:layout_width="0.1dip"
        android:layout_height="@dimen/fragment_home_classification_height"
        android:layout_alignParentRight="true"
        android:background="#ffe8e8e8" />

</RelativeLayout>