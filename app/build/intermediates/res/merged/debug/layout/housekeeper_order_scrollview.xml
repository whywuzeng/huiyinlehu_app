<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/details_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="请填写预约信息" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:minHeight="100dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="100dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:gravity="right|center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="预约类型：" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:gravity="right|center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="预约人：" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:gravity="right|center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="手机号码：" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:gravity="right|center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="预约地址：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:minHeight="100dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="170dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/grey_cornor_bg" >

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/grey_cornor_bg"
                        android:orientation="vertical" >

                        <Spinner
                            android:id="@+id/mySpinner"
                            android:layout_width="155dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="4dp"
                            android:paddingLeft="0dp"
                            android:scrollbars="none"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/type_yuyue"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/linearLayout1" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/jiage2" />
                    </RelativeLayout>
                </RelativeLayout>

                <EditText
                    android:id="@+id/make_pointment_people"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/grey_cornor_bg"
                    android:hint="请输入你的真实姓名"
                    android:maxLength="15"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:singleLine="true"
                    android:textColor="#484848"
                    android:textColorHint="@color/gray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/make_pointment_phone"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/grey_cornor_bg"
                    android:hint="请输入你的手机号码"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:singleLine="true"
                    android:textColor="#484848"
                    android:textColorHint="@color/gray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/make_pointment_address"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/grey_cornor_bg"
                    android:hint="请输入你的详细地址"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:textColor="#484848"
                    android:textColorHint="@color/gray"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:background="#e7e7e7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="拍照上传：" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/grey_cornor_bg"
            android:minHeight="50dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="发票  :" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/grey_cornor_bg"
                android:minHeight="50dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <com.huiyin.wight.ImageViewWithDel
                        android:id="@+id/imageViewWithDel1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.huiyin.wight.ImageViewWithDel
                        android:id="@+id/imageViewWithDel2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.huiyin.wight.ImageViewWithDel
                        android:id="@+id/imageViewWithDel3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.huiyin.wight.ImageViewWithDel
                        android:id="@+id/imageViewWithDel4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.huiyin.wight.ImageViewWithDel
                        android:id="@+id/imageViewWithDel5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" >

                    <LinearLayout
                        android:id="@+id/dongtai_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>

                <ImageView
                    android:id="@+id/make_pointment_fapiao"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_margin="5dp"
                    android:background="@drawable/add_pic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="铭牌  :" />

                <ImageView
                    android:id="@+id/imageView_iv_wenhao"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_wenhao"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/grey_cornor_bg"
                android:minHeight="50dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <com.huiyin.wight.ImageViewWithDel
                        android:id="@+id/imageViewWithDel6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.huiyin.wight.ImageViewWithDel
                        android:id="@+id/imageViewWithDel7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.huiyin.wight.ImageViewWithDel
                        android:id="@+id/imageViewWithDel8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.huiyin.wight.ImageViewWithDel
                        android:id="@+id/imageViewWithDel9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.huiyin.wight.ImageViewWithDel
                        android:id="@+id/imageViewWithDel10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" >

                    <LinearLayout
                        android:id="@+id/dongtai_add2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>

                <ImageView
                    android:id="@+id/make_pointment_mingpai"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_margin="5dp"
                    android:background="@drawable/add_pic" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/hk_tip" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="#e7e7e7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="预约备注：" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp" >

                <EditText
                    android:id="@+id/yuyue_beizhu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/grey_cornor_bg"
                    android:gravity="top"
                    android:maxLength="300"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/inputNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:text="0/300字"
                    android:textColor="@color/gray" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/mp_fast_go"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_btn_orange_selector"
            android:gravity="center"
            android:text="马上提交"
            android:textColor="@color/white" />
    </LinearLayout>

</ScrollView>