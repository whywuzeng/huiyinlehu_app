<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dip"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_while_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="抽奖提示"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dialog_top_line" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal|left"
        android:padding="2dp"
        android:text="很抱歉!活动暂时关闭!" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|left"
        android:padding="2dp"
        android:text="下次开放时间:" />

    <TextView
        android:id="@+id/tv_dialog_content_time"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal|left"
        android:padding="2dp"
        android:text=" " />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dialog_bottom_line" />

    <LinearLayout
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp" >

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="100dip"
            android:layout_height="30dp"
            android:background="@drawable/dialog_button_blue_bg"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>