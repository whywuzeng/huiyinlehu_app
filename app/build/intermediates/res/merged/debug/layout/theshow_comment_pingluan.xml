<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f3f3"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <com.huiyin.ui.show.view.CircularImage
                    android:id="@+id/theshow_touxiang"
                    android:layout_width="55.0dip"
                    android:layout_height="45.0dip"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2014-09-03"
                        android:textColor="#9e9e9e" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@color/orange"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/textView3"
                    android:src="@drawable/icon_jiaguanzhu" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="关注"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <!--
       <ListView
            android:id="@+id/theshow_ipc"
            android:layout_width="match_parent"
            android:layout_height="115dp" />
        -->

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="115dp" >
        </LinearLayout>

        <ImageView
            android:id="@+id/theshow_ipc"
            android:layout_width="100dp"
            android:layout_height="115dp" />

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="115dp" >
        </LinearLayout>

        <ImageView
            android:id="@+id/theshow_ipc"
            android:layout_width="100dp"
            android:layout_height="115dp" />

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="115dp" >
        </LinearLayout>

        <ImageView
            android:id="@+id/theshow_ipc"
            android:layout_width="100dp"
            android:layout_height="115dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/theshow_dianzan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#ffffff"
            android:src="@drawable/icon_xihuan" />

        <LinearLayout
            android:layout_width="8dp"
            android:layout_height="39dp" >
        </LinearLayout>

        <TextView
            android:id="@+id/theshow_dianzan_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="818"
            android:textColor="#9e9e9e" />

        <LinearLayout
            android:layout_width="8dp"
            android:layout_height="39dp" >
        </LinearLayout>

        <ImageButton
            android:id="@+id/theshow_pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#ffffff"
            android:src="@drawable/icon_pinglun" />

        <LinearLayout
            android:layout_width="8dp"
            android:layout_height="39dp" >
        </LinearLayout>

        <TextView
            android:id="@+id/theshow_pinglun_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="11"
            android:textColor="#9e9e9e" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/theshow_fenxiang_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/icon_fenxiang_ic1" />

            <TextView
                android:id="@+id/theshow_fenxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/theshow_fenxiang_ic"
                android:background="@drawable/shurukuang_fenxiang"
                android:text="分享"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/theshow_fenxiang_context"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:background="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lehuquan_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="谁喜欢过我:"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8dp" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <HorizontalScrollView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <GridView
                            android:id="@+id/theshow_gridView"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </HorizontalScrollView>

                <RelativeLayout
                    android:id="@+id/theshow_like_more"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/yuandian" />

                        <LinearLayout
                            android:layout_width="8dp"
                            android:layout_height="wrap_content" >
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/yuandian" />

                        <LinearLayout
                            android:layout_width="8dp"
                            android:layout_height="wrap_content" >
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/yuandian" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>