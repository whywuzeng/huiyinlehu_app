<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray6"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="@color/orange"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/class_sort_main_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_fanhui"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="5"
            android:background="@drawable/shurukuang"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/class_sort_search"
                android:layout_width="16dp"
                android:layout_height="15dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_sousuo" />

            <EditText
                android:id="@+id/class_sort_search_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:editable="true"
                android:hint="搜索商品"
                android:lines="1"
                android:textSize="@dimen/common_lage_text_size" />
        </LinearLayout>

        <ImageView
            android:id="@+id/class_sort_code_scan"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_erweima2x" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/class_list_level2_ll"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:scrollbars="none"
        android:visibility="gone" >

        <ListView
            android:id="@+id/class_list_level2_lv_left"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@drawable/c_left_bg"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="0dip"
            android:listSelector="@color/transparent"
            android:scrollbars="none" >
        </ListView>

        <ListView
            android:id="@+id/class_list_level2_lv_right"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:background="@color/gray6"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="0dip"
            android:listSelector="@color/transparent"
            android:scrollbars="none" >
        </ListView>
    </LinearLayout>

    <ListView
        android:id="@+id/class_sort_list_lv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/gray6" >
    </ListView>

</LinearLayout>