<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/common_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/good_order_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="商品订单"
            android:textColor="@color/index_red"
            android:textSize="@dimen/common_lage_text_size" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/backgood_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="退换货订单"
            android:textSize="@dimen/common_lage_text_size" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/yuyue_order_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="预约订单"
            android:textSize="@dimen/common_lage_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.huiyin.wight.XListView
            android:id="@+id/good_xlistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"
            android:cacheColorHint="#0000"
            android:divider="#0000"
            android:dividerHeight="10dp"
            android:fadeScrollbars="true"
            android:fadingEdge="none"
            android:listSelector="@drawable/list_item_drawable_bg"
            android:scrollbars="none" />

        <com.huiyin.wight.XListView
            android:id="@+id/backgood_xlistview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:cacheColorHint="#0000"
            android:divider="#0000"
            android:dividerHeight="10dp"
            android:fadeScrollbars="true"
            android:fadingEdge="none"
            android:listSelector="@drawable/list_item_drawable_bg"
            android:scrollbars="none"
            android:visibility="gone" />

        <com.huiyin.wight.XListView
            android:id="@+id/yuyue_xlistview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:cacheColorHint="#0000"
            android:divider="#0000"
            android:dividerHeight="10dp"
            android:fadeScrollbars="true"
            android:fadingEdge="none"
            android:listSelector="@drawable/list_item_drawable_bg"
            android:scrollbars="none"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>