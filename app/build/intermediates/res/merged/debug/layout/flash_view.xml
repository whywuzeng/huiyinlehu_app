<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="2dip"
            android:layout_height="16dip"
            android:layout_marginLeft="7dp"
            android:background="@color/index_red" />

        <TextView
            android:id="@+id/flashview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:textColor="#ff474747"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/flashview_adv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:textColor="#ff6b6b6b"
            android:textSize="12sp"
            android:textStyle="normal" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/flashview_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="7dip"
            android:drawableRight="@drawable/promotion_more"
            android:text="更多"
            android:textColor="#ff6b6b6b"
            android:textSize="12sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fragment_home_cuxiao1_height"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0.5dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/flashview_iv1"
                android:layout_width="fill_parent"
                android:layout_height="95dp"
                android:layout_marginBottom="0.5dip"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/flashview_iv2"
                android:layout_width="fill_parent"
                android:layout_height="94dp"
                android:layout_marginTop="0.5dip"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <ImageView
            android:id="@+id/flashview_iv3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.5dip"
            android:layout_weight="1"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <ImageView
        android:id="@+id/flashview_iv4"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="1dip"
        android:scaleType="centerCrop" />

</LinearLayout>