<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/category_list_left_item_lt"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:layout_marginRight="12dip"
        android:background="@drawable/backg_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dip"
            android:layout_marginRight="12dip"
            android:background="@drawable/backg_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/class_list_level2_item_title"
                style="@style/base_font_medium_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="3"
                android:paddingRight="15dip"
                android:text="家用电器"
                android:textColor="@color/font_black" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/class_list_level2_left_r_iv"
        android:layout_width="wrap_content"
        android:layout_height="71dip"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        android:src="@drawable/c_left" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/category_list_left_item_lt"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/gray" />

</RelativeLayout>