<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/goodlist_img"
            android:layout_width="90dip"
            android:layout_height="75dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="10dip"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dip"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/goodlist_title"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="10dip"
                android:layout_weight="2"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="美的空调xxx"
                android:textColor="#ff484848"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="12dip"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/goodlist_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#ffa5a5a5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/goodlist_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:text="￥3599.0"
                    android:textColor="#fffe0000"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/list_line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:background="#ffb6b6b6" />

</LinearLayout>